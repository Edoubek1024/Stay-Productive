{
  "name": "Stay Productive",
  "description": "Keeps you productive",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs", 
    "scripting", 
    "webNavigation", 
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/stay_productive.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}